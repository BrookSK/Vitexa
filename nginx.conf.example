# Vitexa - Nginx Configuration Example
# Copie este arquivo para /etc/nginx/sites-available/vitexa
# e crie um link simbólico em /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name vitexa.local; # Altere para seu domínio
    root /var/www/vitexa/public;
    index index.php index.html;

    # Logs
    access_log /var/log/nginx/vitexa_access.log;
    error_log /var/log/nginx/vitexa_error.log;

    # Configurações de segurança
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://unpkg.com; style-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com; img-src 'self' data: https:; font-src 'self' https:;" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied expired no-cache no-store private must-revalidate auth;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/javascript;

    # Handle PHP files
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock; # Ajuste a versão do PHP
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Configurações de segurança para PHP
        fastcgi_param PHP_VALUE "upload_max_filesize=10M \n post_max_size=10M \n max_execution_time=30 \n max_input_time=30 \n memory_limit=128M";
    }

    # Handle all other requests
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Cache static files
    location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1M;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # Deny access to sensitive files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ \.(sql|log|htaccess)$ {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Deny access to config directory
    location ^~ /config/ {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Deny access to app directory
    location ^~ /app/ {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Limit request size
    client_max_body_size 10M;

    # Timeout settings
    fastcgi_read_timeout 30;
    fastcgi_connect_timeout 30;
    fastcgi_send_timeout 30;
}

