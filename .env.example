# Configurações do Banco de Dados
DB_HOST=localhost
DB_NAME=vitexa_db
DB_USER=root
DB_PASS=

# Configurações da Aplicação
APP_URL=http://localhost
APP_ENV=development
APP_DEBUG=true
TIMEZONE=America/Sao_Paulo

# Configurações da API OpenAI
OPENAI_API_KEY=sua_chave_openai_aqui
OPENAI_API_BASE=https://api.openai.com/v1

# Configurações de Cache
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_DIR=/tmp/vitexa_cache/

# Configurações de Email/SMTP
MAIL_ENABLED=true
MAIL_FROM=noreply@seudominio.com.br
MAIL_FROM_NAME=Vitexa

# Configurações SMTP
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app
MAIL_ENCRYPTION=tls

# Alternativas de configuração SMTP para diferentes provedores:

# Para Gmail, Outlook e outros serviços, você geralmente precisa 
# gerar uma senha de aplicativo (App Password) em suas configurações 
# de segurança, em vez de usar sua senha de conta principal. 
# Isso é uma medida de segurança.

# Gmail (recomendado usar senha de app)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_ENCRYPTION=tls

# Outlook/Hotmail
# MAIL_HOST=smtp-mail.outlook.com
# MAIL_PORT=587
# MAIL_ENCRYPTION=tls

# Yahoo
# MAIL_HOST=smtp.mail.yahoo.com
# MAIL_PORT=587
# MAIL_ENCRYPTION=tls

# SMTP genérico com SSL
# MAIL_HOST=mail.seudominio.com.br
# MAIL_PORT=465
# MAIL_ENCRYPTION=ssl

# Configurações de Push Notifications (opcional)
PUSH_ENABLED=false
FIREBASE_SERVER_KEY=

# Configurações de Webhook (opcional)
WEBHOOK_URL=

# Configurações de Cron Jobs
CRON_TOKEN=vitexa_cron_2024

# Configurações de Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif

# Configurações de Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Configurações de Log
LOG_ENABLED=true
LOG_LEVEL=info
LOG_DIR=/var/log/vitexa/